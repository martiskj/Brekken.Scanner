@page
@model BrekkenScan.Web.Pages.Account.RegisterModel
@{
}

<div class="login-wrapper">
    <h2>Register</h2>
    <form method="post">
        <div class="form-group">
            <label>User name</label>
            <input class="form-control" asp-for="Name" type="text" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Password" type="password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <input class="btn btn-success" value="Register" type="submit" />
    </form>
</div>
