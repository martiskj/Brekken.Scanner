@page
@model BrekkenScan.Web.Pages.Account.LoginModel
@{
}

<div class="login-wrapper">
    <h2>Please log in</h2>

<form method="post">
    <div class="form-group">
        <label>User name</label>
        <input class="form-control" asp-for="Name" type="text" required />
        <div class="invalid-feedback">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Password" type="password" required />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <input class="btn btn-success" value="Log in" type="submit" />
</form>
</div>