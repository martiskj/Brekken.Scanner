<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Brekken</title>

    <environment>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    <environment>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <nav>
        <div class="nav-hamburger" onclick="toggleNavbar(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <ul id="navbar-visning">
                <li><a asp-page="../Index"><i class="fas fa-glass-cheers"></i> Startsiden</a></li>
                <li><a asp-page="Brands/List"><i class="fas fa-archive"></i> Produkter</a></li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    function toggleNavbar(x) {
        x.classList.toggle("change-menu");
        document.getElementById('navbar-visning').classList.toggle("show-nav")
    }
</script>
