@page
@model BrekkenScan.Web.Pages.Brands.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="login-wrapper">

    <h2>Opprett nytt produkt</h2>

    <form method="post">
        <div class="form-group">
            <label>Strekkode: </label>
            <input class="form-control" asp-for="Brand.Barcode" type="text" />
        </div>
        <div class="form-group">
            <label>Navn: </label>
            <input class="form-control" asp-for="Brand.Name" type="text" />
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">Lagre</button>
            <a asp-page="./List" class="btn btn-default button-back">Gå tilbake</a>
        </div>
    </form>


</div>